{
  "name": "codyschool",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "author": "Dang Van Thanh <dangvanthanh@codyschool.com> (@dangvanthanh)",
  "license": "MIT",
  "scripts": {
    "postinstall": "./postinstall.js",
    "start": "watchexec -w src npm run build",
    "build": "npm run build:css && npm run build:site",
    "build:css": "NODE_ENV=production postcss --config legacy-commonjs index.css -o public/styles.css",
    "build:css:watch": "postcss --config legacy-commonjs index.css -o public/styles.css -w",
    "build:site": "toast incremental ."
  },
  "dependencies": {
    "@toastdotdev/mdx": "^0.2.3",
    "esinstall": "^1.1.6",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1",
    "toast": "^0.3.43"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "pretty-bytes": "5.6.0"
  }
}
